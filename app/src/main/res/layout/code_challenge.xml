<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange"
            android:paddingVertical="@dimen/padding_dim_vert"
            android:text="This is an orange TextView"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_dimension" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/green_200"
            android:paddingVertical="@dimen/padding_dim_vert"
            android:text="This is a green TextView"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_dimension" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/teal_200"
            android:paddingVertical="@dimen/padding_dim_vert"
            android:text="This is a blue TextView"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_dimension" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_dim"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_200"
            android:text="This is a button"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/color_pallet" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_dim"
            android:layout_weight="1"
            android:backgroundTint="@color/green_200"
            android:text="This is a green button"
            android:textColor="@color/black" />
    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:padding="@dimen/padding_edit"
        android:paddingTop="@dimen/padding_editText"
        android:text="This is an EditText"
        android:textSize="@dimen/medium_dimension" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:padding="@dimen/padding_edit"
        android:paddingBottom="@dimen/padding_editText"
        android:text="This is a new EditText"
        android:textSize="@dimen/medium_dimension" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notify me :)"
            android:textSize="@dimen/medium_dimension" />

        <Switch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Auto back-up"
            android:textSize="@dimen/small_dim" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/purple_200">

        </View>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4"
            android:theme="@style/RatingBar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/purple_200">

        </View>


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YES"
                android:textSize="@dimen/medium_dimension" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:textSize="@dimen/medium_dimension" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_200"></LinearLayout>


</LinearLayout>